<script>
  function validateCategoryOfferForm() {
  const categoryId = document.getElementById('category').value;
  const discount = document.getElementById('discount').value;

  // Clear previous error messages
  document.getElementById('category-error').textContent = '';
  document.getElementById('discount-error').textContent = '';

  // Validate category selection
  if (categoryId === '' || categoryId === null) {
    document.getElementById('category-error').textContent = 'Select a valid category.';
    return false;
  }

  // Validate discount
  if (!discount || isNaN(discount) || parseFloat(discount) <= 0 || parseFloat(discount) > 100) {
    document.getElementById('discount-error').textContent = 'Enter a valid discount percentage (between 0 and 100).';
    return false;
  }

  return true; // Return true if validation passes, false otherwise
}

</script>

