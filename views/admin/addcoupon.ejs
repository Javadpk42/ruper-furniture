  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const couponForm = document.getElementById('couponForm');
  
      couponForm.addEventListener('submit', function (event) {
        event.preventDefault();
        if (validateForm()) {
          this.submit();
        }
      });
  
      function validateForm() {
        console.log('Form submitted!');
        const codeInput = document.getElementById('code');
        const discountInput = document.getElementById('discountPercentage');
        const startDateInput = document.getElementById('startDate');
        const expiryDateInput = document.getElementById('expiryDate');
        const minPurchaseInput = document.getElementById('minPurchaseAmount');
  
        const codeError = document.getElementById('codeError');
        const discountError = document.getElementById('discountError');
        const startDateError = document.getElementById('startDateError');
        const expiryDateError = document.getElementById('expiryDateError');
        const minPurchaseAmountError= document.getElementById('minPurchaseAmounterror');

  
        codeError.textContent = '';
        discountError.textContent = '';
        startDateError.textContent = '';
        expiryDateError.textContent = '';
        minPurchaseAmountError.textContent = '';
  
        let isValid = true;
  
        if (codeInput.value.trim() === '') {
          codeError.textContent = 'Coupon Code is required';
          isValid = false;
        }
  
        if (discountInput.value === '' || discountInput.value < 2 || discountInput.value > 50) {
          discountError.textContent = 'Discount Percentage must be between 2 and 50';
          isValid = false;
        }
  
        if (startDateInput.value.trim() === '') {
          startDateError.textContent = 'Start Date is required';
          isValid = false;
        }
  
        if (expiryDateInput.value.trim() === '') {
          expiryDateError.textContent = 'Expiry Date is required';
          isValid = false;
        }
        if (minPurchaseInput.value.trim() === '') {
          minPurchaseAmountError.textContent = 'Min purchase amount is required';
          isValid = false;
        }
        return isValid;
      }
    });
  </script>





