        <style>
          /* dataTable cssss */

  .page-link {
    font-size: 7px!important;
  }
  .dataTables_info{
    font-size: 12px;
    margin-left: 14px;
  }
  .dataTables_filter label {
    margin-right: 20px;
  }
  .dataTables_length{
    margin-left: 20px;
  }
        </style>
       
          
       

        <div class="table-responsive p-0">
          <% if (salesData.length > 0) { %>

          <table class="table" id="offerDataTable">
            <thead>
              <tr>
                <th>Order ID</th>
                <th>Username</th>
                <th>Product</th>
                <th style="text-align: center;">Category</th>
                <th>Price</th>
                <th>Qty</th>
                <th>Order Date</th>
                <th>Time</th>
                <th>Payment Method</th>
                <th>Order Status</th>

              </tr>
            </thead>
            <tbody>
              <% salesData.reverse().forEach(sale => { %>
                <tr>
                  <td><%= sale._id %></td>
                  <td style="text-align: center;"><%= sale.userData[0]?.username || '' %></td>
                  <td><%= sale.productDetails[0]?.product_name || '' %></td>
                  <td style="text-align: center;"><%= sale.productDetails[0]?.category || '' %></td>
                  <td>&#8377; <%= sale.cart.products.price.toFixed(2) || '' %></td>
                  <td style="text-align: center;"><%= sale.cart.products.quantity  || '' %></td>
                  <td><%= sale.orderDate.toDateString() %></td>
                <td><%= sale.orderDate.toLocaleTimeString() %></td>
                <td style="text-align: center;"><%= sale.paymentOption || '' %></td>
                <td style="text-align: center;"><%= sale.cart.products.orderStatus || '' %></td>

                </tr>
              <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="9" class="text-center">
                    <p style="text-align: center;">No sales found.</p>
                  </td>
                </tr>
              <% } %>
            </tbody>
          </table>
          
          
          
          
