<script>
    function removeOffer (proId){
     $.ajax({
       url:'/admin/remove-offer',
       method:'post',
       encoded:true,
       data:{
         productId:proId
       }
     }).done((response)=>{
       if(response.success){
        location.reload()
         $("#reloadDiv").load("/admin/product-offers #reloadDiv")
       }else{
         alert('failed')
       }
     })
    }
   </script>
  

