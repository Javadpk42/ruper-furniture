    <div class="container-fluid py-4">
      <div class="row">
        <div class="col-12">
          <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
              <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                <h6 class="text-white text-capitalize ps-3">Orders</h6>
              </div>
            </div>
            <div class="card-body px-0 pb-2">


               <div class="table-responsive p-0">
                <% if (orders.length > 0) { %>

                <table class="table" id="offerDataTable">
                  <thead>
                    <tr>
                      <th>Order ID</th>
                      <th style="text-align: center;">Username</th>
                      <th>Address</th>
                      <th>Order Date</th>
                      <th>Payment Method</th>
                      <th>Total Amount</th>
                      <th></th>
                      
                    </tr>
                  </thead>
                  <tbody>
                      <!-- Loop through and display orders -->
                      <% for (let i = 0; i < orders.length; i++) { %>
                        <tr>
                          <td><%= orders[i]._id %></td>
                          <td style="text-align: center;"><%= orders[i].user.username%></td>
                          <td>
                            <%= orders[i].deliveryAddress.fullname %><br>
                            <%= orders[i].deliveryAddress.housename %>, <%= orders[i].deliveryAddress.city %><br>
                            Phone: <%= orders[i].deliveryAddress.mobile %>
                          </td>
                          <td><%= orders[i].orderDate.toDateString() %></td>
                          <td style="text-align: center;"><%= orders[i].paymentOption %></td>
                          <td style="text-align: center;">&#8377;<%= orders[i].totalAmount.toFixed(2) %></td>
                          <td><a href="/admin/orderdetails/<%= orders[i]._id %>" class="btn-small d-block">View Details</a></td>
                         
                        </tr>
                      <% } %>
                    <% } else { %>
                      <tr>
                        <td colspan="7" class="text-center">
                          <p style="text-align: center;">No orders found.</p>
                        </td>
                      </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
              


            </div>
          </div>
